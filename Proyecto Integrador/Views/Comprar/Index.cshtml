<input type="hidden" value="@ViewBag.codigoUsu" id="codigoUsu"/>
<div class="" ng-controller="ComprarController">


    <div class="" ng-show="verPrincipal == true">
        <section class="content-header">
            <h1>
                Planes de Examenes online
            </h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-body">

                    <div class="col-md-12 form-inline" style="text-align:center">

                        <div class="form-group">

                            <label>Tipo Suscripción: </label>
                            <select class="form-control" id="tipSus" name="tipSus">
                                <option value="-1">SELECCIONE...</option>
                                <option ng-repeat="item in suscripciones" value="{{item.IdSuscripcion}}|{{item.Descripcion}}|{{item.precio}}">{{item.Descripcion}}</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label>Cantidad Meses: </label>
                            <input type="number" class="form-control" name="cantiMes" id="cantiMes" />
                        </div>

                        <div class="form-group">
                            <button ng-click="obtenerCompra()" type="button" class="btn btn-success">Obtener compra</button>
                        </div>

                    </div>

                    <div class="col-md-12" style="margin-top:2%">
                        <fieldset>
                            <legend></legend>
                        </fieldset>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-2">

                        </div>

                        <div class="col-md-4">
                            <div class="box box-solid">
                                <div class="box-header with-border" style="background-color:#ff3c32;color:white;text-align:center">
                                    <i class="fa fa-mortar-board"></i>
                                    <h3 class="box-title">Premium mensual</h3>
                                    <br />
                                    <h3 class="box-title">Desde S/. {{premium}}</h3>
                                </div>
                                <div class="box-body">

                                    <label>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</label>
                                    <hr />
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="box box-solid">
                                <div class="box-header with-border" style="background-color:#fba905;color:white;text-align:center">
                                    <i class="fa fa-mortar-board"></i>
                                    <h3 class="box-title">Gold mensual</h3>
                                    <br />
                                    <h3 class="box-title">Desde S/. {{gold}}</h3>
                                </div>
                                <div class="box-body">
                                    <label>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</label>
                                    <hr />
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                    <label><span class="fa fa-check"></span> Lorem Ipsum has been the industry's standard dummy text</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">

                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>


    <section class="invoice" ng-show="verFactura == true">
        <!-- title row -->
        <div class="row" style="background-color:#007bdf;color:white">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Examen Online Suscriptor
                    <small class="pull-right" style="color:white">Fecha: @DateTime.Now.ToShortDateString()</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info" style="background-color:#007bdf;color:white">
            <div class="col-sm-4 invoice-col">
                De
                <address>
                    <strong>Examen Online Admin, Inc.</strong><br>
                    Cibertec Independencia<br>
                    Lima, Peru<br>
                    Phone: (51) 12345678<br>
                    Email: examenonlineperu@hotmail.com
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                Para
                <address>
                    <strong>@ViewBag.nombre</strong><br>
                    Lima, Peru<br>
                    Lima, Peru<br>
                    Phone: (51) 32165498<br>
                    Email: @ViewBag.correo
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Factura #007612</b><br>
                <br>
                <b>Orden ID:</b> 4F3S8J<br>
                <b>Fecha de Pago:</b> @DateTime.Now.ToShortDateString()<br>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive" style="padding:0px">
                <table class="table table-striped">
                    <thead style="background:#282d31;color:white">
                        <tr>
                            <th>Suscripcion</th>
                            <th>Cantidad Meses</th>
                            <th>Precio por mes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="row in detalleCompra">
                            <td>{{row.descSus}}</td>
                            <td>{{row.CantidadMeses}}</td>
                            <td>S/. {{row.PrecioPorMes}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Métodos de pago:    </p>
                <img src="../../dist/img/credit/visa.png" alt="Visa">
                <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                <img src="../../dist/img/credit/american-express.png" alt="American Express">
                <img src="../../dist/img/credit/paypal2.png" alt="Paypal">

                @*<p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg
                        dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                    </p>*@
            </div>
            <!-- /.col -->
            <div class="col-xs-6">

                <div class="table-responsive">
                    <table class="table">
                        @*<tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>$250.30</td>
                            </tr>
                            <tr>
                                <th>Tax (9.3%)</th>
                                <td>$10.34</td>
                            </tr>
                            <tr>
                                <th>Shipping:</th>
                                <td>$5.80</td>
                            </tr>*@
                        <tr>
                            <th>Total:</th>
                            <td>S/. {{totalVenta}}</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print" style="padding-top:2%">
            <div class="col-xs-12">
                @*<a href="#" onclick="imprimirNavegador()" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Imprimir</a>*@
                <button ng-click="enviarCompra()" type="button" class="btn btn-success pull-right">
                    <i class="fa fa-credit-card"></i> Enviar pago
                </button>
                <button ng-click="cancelar()" type="button" class="btn btn-danger pull-right" style="margin-right: 5px;">
                        <i class="fa fa-ban"></i> Cancelar
                    </button>
            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>

<script>
    function imprimirNavegador() {
        window.print();
    }
</script>