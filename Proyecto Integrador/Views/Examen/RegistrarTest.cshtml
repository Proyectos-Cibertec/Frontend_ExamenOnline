    function eliminarImagen(e) {

        e.preventDefault();
        let img, idImg;

        if (e.target.parentElement.classList.contains('borrar-imagen')) {
            e.target.parentElement.parentElement.parentElement.remove();
            img = e.target.parentElement.parentElement.parentElement;
            idImg = img.querySelector('a').getAttribute('data-id');
        }

        eliminarImagenArray(idImg);

    }

    function eliminarImagenArray(idImg) {
        LstImagen.forEach(function (imgArray, index) {
            if (imgArray.item === Number(idImg)) {
                LstImagen.splice(index, 1);
            }
        });

    }

