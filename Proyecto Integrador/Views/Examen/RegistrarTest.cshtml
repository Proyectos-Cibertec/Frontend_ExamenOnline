<script>
    $(document).ready(function () {
        inicializarLibrerias();
        inicializarVariables();
        inicializarEventos();
    });

    function inicializarLibrerias() {
        $('.froala_editor').froalaEditor({
            language: 'es'
        });

        $('.datepicker').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy',
            locale: 'es',
            language: 'es'
        });
    }


    function inicializarVariables() {
        // Examen
        window.examen = {};

        // Preguntas
        window.LstPreguntas = [];
        window.tblPreguntaBody = document.querySelector('#tablaPreguntas tbody');

        // Para alternativa
        window.LstAlternativa = [];
        window.tblAlternativaBody = document.querySelector('#tablaAlternativas tbody');

        //Para imagenes
        window.LstImagen = [];
        window.tblImagenBody = document.querySelector('#tablaImagenes tbody');
        window.itemImagenes = 0;

        window.LstVideo = [];
    }

    function limpiarDiseñadorPreguntas() {
        // Limpia el froala editor
        $('.froala_editor').froalaEditor('html.set', '');

        // Alternativa y tabla
        $("#txtDescAlternativa").val("");
        limpiarTabla("tablaAlternativas");

        $("#tablaImagenes").val("");
        limpiarTabla("tablaImagenes");

        $("#tablaVideos").val("");
        limpiarTabla("tablaVideos");
    }

    function limpiarDiseñadorExamen() {
        $("#txtTitulo").val("");
        $("#txtTiempo").val("");
        $('#txtFechaExpiracion').datepicker().datepicker("setDate", new Date());
        $("#txtDescripcion").val("");
        limpiarTabla("tablaPreguntas");
        limpiarDiseñadorPreguntas();
    }

    function inicializarEventos()
    {
        $('#txtFechaExpiracion').datepicker().datepicker("setDate", new Date());
        // Botón diseñar preguntas
        $("#btnDiseñarPregunta").on("click", function () {
            limpiarDiseñadorPreguntas();
            $("#cajaPreguntas").slideUp("slow", function () {
                $("#cajaPreguntas").slideDown("slow");
            });
            $("#contenedorOpcionesMultimedia").slideUp("slow", function () {
                $("#contenedorOpcionesMultimedia").slideDown("slow");
            });
            $("#contenedorAgregarPregunta").slideUp("slow", function () {
                $("#contenedorAgregarPregunta").slideDown("slow");
            });


            $("#txtNumeroPregunta").html(window.LstPreguntas.length + 1);
        });

        $("#btnAgregarVideoImagen").on("click", function () {
            $("#cajaVideoEImagen").slideDown("slow");
        });

        $("#btnOcultarVideoImagen").on("click", function () {
            $("#cajaVideoEImagen").slideUp("slow");
        });

        $("#btnOcultarPregunta").on("click", function () {
            $("#cajaPreguntas, #contenedorOpcionesMultimedia, #contenedorAgregarPregunta").slideUp("slow");
        });

        // Alternativa
        $("#divTablaAlternativa").on("click", eliminarAlternativa);
        $(".editar-alternativa").on("click", editarAlternativa);

        $("#btnAgregarAlternativa").on("click", agregarAlternativa);
        $("#btnActualizarAlternativa").on("click", actualizarAlternativa);

        // Imágenes
        $("#btnAgregarImagen").on("click", agregarImagen);
        $("#divtablaImagenes").on("click", eliminarImagen);

        $("#btnAgregarPregunta").on("click", agregarPregunta);

        $('.froala_editor').froalaEditor({
            language: 'es'
        }).on('froalaEditor.image.beforeUpload', function (e, editor, files) {
            if (files.length) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var result = e.target.result;
                    editor.image.insert(result, null, null, editor.image.get());
                };
                reader.readAsDataURL(files[0]);
            }
            editor.popups.hideAll();
            return false;
        });

        $('.datepicker').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy',
            locale: 'es',
            language: 'es'
        });

        $("#btnRegistrarExamen").on("click", registrarExamen);

        $("#txtTiempo").keypress(function (e) {
            let numeros = '1234567890';
            let caracter = String.fromCharCode(e.which);
            if (numeros.indexOf(caracter) < 0)
                return false;
        });

        $("#txtDescAlternativa").on("keypress", function (e) {
            let keyCode = e.keyCode;
            if (keyCode == 13) { // ENTER
                agregarAlternativa();
            }
        });



    }

    function agregarPregunta() {
        // Traemos las alternativas
        let indicePreguntaActual = window.LstPreguntas.length;
        let lstAlternativa = window.LstAlternativa;

        if (lstAlternativa.length == 0) {
            swal({
                type: 'error',
                title: 'Error',
                text: 'La pregunta actual no tiene alternativas. Llene las alternativas para guardar la pregunta!',
            });
            return;
        }
        if ($(".froala_editor").val().trim() === "" ) {
            swal({
                type: 'error',
                title: 'Error',
                text: 'Ingrese descripción de la pregunta',
            });
            return;
        }

        let pregunta = {
            IdPregunta: null,
            Pregunta: $('.froala_editor').froalaEditor('html.get'), // Descripción de la pregunta en HTML
            LstImagen: [],
            LstVideo: [],
            LstAlternativa: window.LstAlternativa
        };
        window.LstPreguntas[indicePreguntaActual] = pregunta;

        // Se limpia
        window.LstAlternativa = [];
        window.LstVideo = [];
        window.LstImagen = [];
        limpiarDiseñadorPreguntas();
        // Mostrar preguntas en la tabla
        $("#cajaPreguntas, #contenedorOpcionesMultimedia, #contenedorAgregarPregunta").slideUp("slow");

        mostrarPreguntas();
    }

    function mostrarPreguntas() {
        limpiarTabla("tablaPreguntas");
        let nroPreguntas = window.LstPreguntas.length;
        for (let i = 0; i < nroPreguntas; ++i) {
            var pregunta = window.LstPreguntas[i];
            pregunta.Numero = (i + 1); // Actualizamos su número de pregunta

            const row = document.createElement("tr");
            row.innerHTML = "<td>" + pregunta.Numero + "</td>" +
                            "<td>" + pregunta.Pregunta + "</td>" +
                            "<td>" + pregunta.LstAlternativa.length + "</td>" +
                            "<td><a href='#' class='eliminar-pregunta' data-id=" + (i + 1) + " onclick='eliminarPregunta(" + (i + 1) + ");'><i class='fa fa-trash'></i></a></td>";

            tblPreguntaBody.appendChild(row);
        }
    }

    function eliminarPregunta(numeroPregunta) {
            window.LstPreguntas.forEach(function (pregunta, index) {
                if (pregunta.Numero === Number(numeroPregunta)) {
                    window.LstPreguntas.splice(index, 1);
                }
            });

        mostrarPreguntas();
    }

    // Funciones para alternativa
    function agregarAlternativa() {

        let validacion = $("#txtDescAlternativa").val().trim().length > 0;

        if (validacion) {
            let esAlternativaCorrecta = $("#chkAltCorrecta").is(':checked');

            let alternativa = {
                Numero: window.LstAlternativa.length + 1,
                Descripcion: $("#txtDescAlternativa").val().trim(),
                OpcionCorrecta: esAlternativaCorrecta
            };
            window.LstAlternativa.push(alternativa);
            $("#chkAltCorrecta").prop("checked", false);
            mostrarAlternativas();
            $("#txtDescAlternativa").val("").focus();

        } else {
            swal({
                type: 'error',
                title: 'Error',
                text: 'Ingrese descripción de la alternativa'
            });
        }
    }

    function actualizarAlternativa() {
        let i = $("#txtIdAlternativa").val();

        let alternativa = {
            Numero: i + 1,
            Descripcion: $("#txtDescAlternativa").val().trim(),
            OpcionCorrecta: $("#chkAltCorrecta").is(":checked")
        };

        window.LstAlternativa[i] = alternativa;
        $("#chkAltCorrecta").prop("checked", false);
        mostrarAlternativas();
        $("#txtDescAlternativa").val("").focus();
    }

    // Limpia y vuelve a mostrar las alternativas
    function mostrarAlternativas() {
        limpiarTabla("tablaAlternativas");
        let nroAlternativas = window.LstAlternativa.length;
        for (let i = 0; i < nroAlternativas; ++i) {
            var alternativa = window.LstAlternativa[i];
            alternativa.Numero = (i + 1); // Actualizamos su número de pregunta
            let alternativaCorrecta = "";

            if (alternativa.OpcionCorrecta === true) {
                alternativaCorrecta = "<td><i class='fa fa-check-square-o'></i></td>";
            } else {
                alternativaCorrecta = "<td><i class='fa fa-square-o'></i></td>";
            }

            const row = document.createElement("tr");
            row.innerHTML = "<td>" + alternativa.Descripcion + "</td>" +
                            alternativaCorrecta +
                "<td><a href='#' class='borrar-alternativa' data-id=" + (i + 1) + "><i class='fa fa-trash'></i></a></td>" +
                `<td><a href="#" class="editar-alternativa" onclick="editarAlternativa(${i})" data-id=${(i + 1)}"></i><i class="fa fa-edit"></i></a></td>`;

            tblAlternativaBody.appendChild(row);
        }
    }

    function eliminarAlternativa(e) {
        e.preventDefault();
        let atv, numeroAlternativa;

        if (e.target.parentElement.classList.contains('borrar-alternativa')) {
            e.target.parentElement.parentElement.parentElement.remove();
            atv = e.target.parentElement.parentElement.parentElement;
            numeroAlternativa = atv.querySelector('a').getAttribute('data-id');

            window.LstAlternativa.forEach(function (alternativa, index) {
                if (alternativa.Numero === Number(numeroAlternativa)) {
                    window.LstAlternativa.splice(index, 1);
                }
            });
        }

        mostrarAlternativas();
    }

    // Función que trae los datos de la alternativa hacia los inputs
    function editarAlternativa(i) {
        let alternativa = window.LstAlternativa[i];
        console.log(alternativa);
        $("#txtIdAlternativa").val(i);
        $("#txtDescAlternativa").val(alternativa.Descripcion);
        $("#chkAltCorrecta").prop("checked", alternativa.OpcionCorrecta);
    }

    // Para registrar el examen
    function registrarExamen() {
        var lstPreguntas = window.LstPreguntas;
        if (lstPreguntas.length == 0) {
            swal({
                type: 'error',
                title: 'Error',
                text: 'El examen actual no tiene ninguna pregunta. Llene las preguntas para registrar el examen.'
            });
            return;
        }

        swal({
            title: 'Seguro que desea registrar el examen?',
            // text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí'
        }).then((result) => {
            if (result.value) {
                let titulo = $("#txtTitulo").val();
                let tiempoMaximo = $("#txtTiempo").val();
                let fechaExpiracion = $("#txtFechaExpiracion").val();
                let descripcion = $("#txtDescripcion").val();
                // Validar entrada

                window.examen = {
                    IdExamen: null, // Se autogenera dentro de la aplicación
                    FechaRegistro: null, // Se obtiene dentro de la aplicación
                    FechaExpiracion: fechaExpiracion, // Fecha
                    Usuario: null, // Lo obtiene desde la sesión dentro del Controller
                    Titulo: titulo,
                    Descripcion: descripcion,
                    TiempoMaximo: tiempoMaximo, // Minutos
                    LstPreguntas: window.LstPreguntas // Lista de preguntas con alternativas y todo
                };

                let data = window.examen;
                $.ajax({
                    url: '../Examen/RegistrarExamen',
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(data),
                    success: function (response) {

                        let respuesta = JSON.parse(response);

                        if (respuesta) {
                            swal('Buen trabajo!', 'Se registró el examen correctamente!', 'success');
                            limpiarDiseñadorExamen();
                            inicializarVariables();
                            //$("#cajaListadoPreguntas").slideUp("slow");

                        } else {
                            swal({
                                type: 'error',
                                title: 'Error',
                                text: 'Ocurrió un error al registrar el examen'
                            })
                        }
                    },
                    error: function () {
                        swal({
                            type: 'error',
                            title: 'Error',
                            text: 'Error al procesar el registro'
                        })
                        window.LstPreguntas = [];
                    }
                });
            }
        })
    }

    function limpiarTabla(id) {
        $('#' + id + ' tbody').empty();
    }

    //Funciones para Imagen
    function agregarImagen() {

        let fileImagen = $("#imgenesFile").get(0).files;

        let objImagen = {
            item: itemImagenes,
            Imagen: fileImagen[0],
            DescImagen: fileImagen[0].name,
            Tipo: fileImagen[0].type
        };

        muestraImagen(objImagen);
        itemImagenes++;
    }

    function muestraImagen(objImagen) {

        LstImagen.push(objImagen);

        const row = document.createElement("tr");
        row.innerHTML = "<td>" + objImagen.DescImagen + "</td>" +
                        "<td>" + objImagen.Tipo + "</td>"  +
